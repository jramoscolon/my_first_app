<!DOCTYPE html>
<html>
<head>
  <title>MyFirstApp</title>
  <!-- Typekit embed code -->
  <script src="https://use.typekit.net/tjf3rtq.js"></script>
  <script>try{Typekit.load({ async: true });}catch(e){}</script>
  <!-- Bootstrap CDN -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!-- Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
  <!-- Bootstrap for mobile responsive -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
	<header>
			<nav class="navbar navbar-inverse">
				<div class="container-fluid">
					<div class="navbar-header">
						<a class="navbar-brand" href="#">Bike Graz</a>
					</div>
					<ul class="nav navbar-nav pull-right">
						<li><a href="#">About Us</a></li>
						<li class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" href="#">Bikes<span class="caret"></span></a>
							<ul class="dropdown-menu">
					            <li><a href="#">Street Bike</a></li>
					            <li><a href="#">Racing Bike</a></li>
					            <li><a href="#">Cruising Bike</a></li>
					         </ul>
						</li>
						<li><a href="">Gallery</a></li>
						<li><a href="">Contact</a></li>
					</ul>

				</div>
				
			</nav>
		</header>
