<% if alert %>
  <div class="alert alert-info no-bottom" role="alert"><%= notice %></div>
<% end %>

<div class="container">

<h1>Listing Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= link_to 'Show', user, :class => 'btn btn-default' %></td>
        <% if can? :update, @user %>
        <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-default' %></td>
        <% end %>
        <% if can? :destroy, @user %>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p class="btn btn-default"><%= link_to 'New User', new_user_path %></p>

</div>
