<div class="container">
  <% if signed_in? %>
    <h4>Add a Review:</h4>
      <%= form_for([@product, @product.comments.build]) do |f| %>
        <div class="form-group">
          <%= f.label :body, "Comments" %>
          <%= f.text_area :body, class: "form-control", rows: "5" %>
        </div>
        
        <div class="rating bottom-margin"></div>
        <p>
          <%= f.submit "Submit", class: "btn btn-default" %>
        </p>
      <% end %>
  <% end %>
</div>